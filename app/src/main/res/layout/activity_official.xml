<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OfficialActivity">

    <TextView
        android:id="@+id/Official_locationTextView"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="#9C27B0"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="699dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Official_locationTextView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/Photo_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Official_officeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.50"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Office" />

            <TextView
                android:id="@+id/Official_nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Official_officeTextView"
                tools:text="Name" />

            <TextView
                android:id="@+id/Official_partyTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Official_nameTextView"
                tools:text="party" />

            <ImageView
                android:id="@+id/Official_photoImageView"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginTop="40dp"
                android:onClick="imageClicked"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Official_partyTextView"
                app:srcCompat="@drawable/missing" />

            <TextView
                android:id="@+id/Official_address"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:text="Address:"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Official_photoImageView" />

            <TextView
                android:id="@+id/Official_addressTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="16dp"
                android:textColor="@android:color/background_light"
                android:textColorLink="@android:color/background_light"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/Official_address"
                app:layout_constraintTop_toTopOf="@+id/Official_address"
                tools:text="address poop" />

            <TextView
                android:id="@+id/Official_phone"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:text="Phone:"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Official_addressTextView" />

            <TextView
                android:id="@+id/Official_phoneTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="16dp"
                android:textColor="@android:color/background_light"
                android:textColorLink="@android:color/background_light"
                android:textSize="18sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/Official_phone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/Official_phone"
                tools:text="Phone poop" />

            <TextView
                android:id="@+id/Official_email"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:text="Email:"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Official_phone" />

            <TextView
                android:id="@+id/Official_emailTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:textColor="@android:color/background_light"
                android:textColorLink="@android:color/background_light"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/Official_email"
                app:layout_constraintTop_toBottomOf="@+id/Official_phoneTextView"
                tools:text="Email poop" />

            <TextView
                android:id="@+id/Official_website"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:text="Website:"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Official_email" />

            <TextView
                android:id="@+id/Official_websiteTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:textColor="@android:color/background_light"
                android:textColorLink="@android:color/background_light"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.029"
                app:layout_constraintStart_toEndOf="@+id/Official_website"
                app:layout_constraintTop_toBottomOf="@+id/Official_emailTextView"
                tools:text="Website poop" />

            <ImageView
                android:id="@+id/Official_facebookImageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:onClick="facebookClicked"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Official_websiteTextView"
                app:srcCompat="@drawable/facebook" />

            <ImageView
                android:id="@+id/Official_twitterImageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="24dp"
                android:onClick="twitterClicked"
                app:layout_constraintStart_toEndOf="@+id/Official_facebookImageView"
                app:layout_constraintTop_toTopOf="@+id/Official_facebookImageView"
                app:srcCompat="@drawable/twitter" />

            <ImageView
                android:id="@+id/Official_googleplusImageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="24dp"
                android:onClick="googlePlusClicked"
                app:layout_constraintStart_toEndOf="@+id/Official_twitterImageView"
                app:layout_constraintTop_toTopOf="@+id/Official_twitterImageView"
                app:srcCompat="@drawable/googleplus" />

            <ImageView
                android:id="@+id/Official_youtubeImageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="24dp"
                android:onClick="youtubeClicked"
                app:layout_constraintStart_toEndOf="@+id/Official_googleplusImageView"
                app:layout_constraintTop_toTopOf="@+id/Official_googleplusImageView"
                app:srcCompat="@drawable/youtube" />

            <ImageView
                android:id="@+id/Official_partyImageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintBottom_toBottomOf="@+id/Official_photoImageView"
                app:layout_constraintEnd_toEndOf="@+id/Official_photoImageView"
                app:layout_constraintHorizontal_bias="0.50"
                app:layout_constraintStart_toStartOf="@+id/Official_photoImageView"
                app:layout_constraintTop_toTopOf="@+id/Official_photoImageView"
                app:layout_constraintVertical_bias="1.0"
                app:srcCompat="@drawable/dem_logo" />

            <TextView
                android:id="@+id/expand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:text="TextView"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Official_googleplusImageView" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>